
<h2>Login</h2>


  <% if flash[:error] %>

    <br>
    <strong>
      <%= flash[:error] %>
    </strong>
    <br>
    <br>

  <% end %>

<%#
  We can also use the 'form_with' helper for generic forms
  that do NOT work with a model; to do this we use
     url: SOME_URL_HERE
  instead of
     model: @SOME_MODEL_HERE
%>


<%= form_with url: login_path, local: true do |f| %>

  <%= f.label :email, 'Email Address' %>
  <br>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.submit 'Login' %>

<% end %>