
<h2>
  <em><%= @work.title %></em>,
  <%= @work.year %>
</h2>
<h3>
  by 
  <%= link_to @work.artist.name, artist_path(@work.artist.id) %>
</h3>



<%= link_to 'Edit', edit_work_path(@work.id) %>
|
<%= link_to 'Delete', work_path(@work.id), method: 'delete' %>

<p>
  <strong>Medium:</strong>
  <%= @work.medium %>
</p>

<p>
  <strong>Style:</strong>
  <%= @work.style %>
</p>

<%= image_tag @work.image, alt: @work.title, class: 'artwork' %>